<div>
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
    <div class="relative isolate overflow-hidden bg-gradient-to-r from-green-400 to-green-600 px-6 py-24 sm:rounded-3xl sm:px-24 xl:py-32">
      <h2 class="mx-auto max-w-4xl text-center text-3xl font-bold tracking-tight text-white sm:text-4xl">
        Welcome to your playable playlist, <%= @user.name %>!
      </h2>
      <p class="mx-auto mt-4 max-w-2xl text-center text-lg leading-8 text-white">
        Spotify ID: <%= @user.spotify_id %>
      </p>
    </div>

    <% if @current_track.present? %>
      <div class="mt-8">
        <h2 class="text-xl font-bold text-gray-900">Currently Playing</h2>
        <div class="mt-4 rounded-lg bg-gray-50 p-4">
          <p class="text-lg font-medium text-gray-900"><%= @current_track %></p>
        </div>
      </div>
    <% end %>

    <%= render 'playlist_cards', playlists: @playlists %>
  </div>
</div>
